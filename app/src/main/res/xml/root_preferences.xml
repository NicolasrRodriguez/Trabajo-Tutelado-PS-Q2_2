<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Existing preferences -->

    <ListPreference
        android:key="language_preference"
        android:title="@string/pref_title_language"
        android:summary="@string/pref_summary_language"
        android:entries="@array/languages"
        android:entryValues="@array/language_values"
        android:defaultValue="en"
        android:dialogTitle="@string/pref_dialog_title_language" />


    <CheckBoxPreference
        android:key="theme"
        android:defaultValue="false"
        android:title="@string/tema"
        android:summaryOff="@string/modo_claro"
        android:summaryOn="@string/modo_oscuro">

    </CheckBoxPreference>



</PreferenceScreen>